.description {
  position: relative;
  height: 118rpx;
  line-height: 118rpx;
  font-size: 30rpx;
  color: #7b8073;
}
.line {
  width: 100%;
	height: 2rpx;
	background-image: linear-gradient(-90deg, 
		#3fca4c 0%, 
		#9bc53e 40%, 
		#a5c743 70%, 
		#aec847 100%), 
	linear-gradient(
		#ededed, 
		#ededed);
	background-blend-mode: normal, 
		normal;
}

.description image {
  position: absolute;
  right: 0;
  top: 50%;
  margin-top: -24rpx;
  width: 48rpx;
  height: 48rpx;
}

.title {
  font-size: 30rpx;
  color: #7b8073;
  height: 109rpx;
  line-height: 109rpx;
}

.tips {
  display: flex;
  justify-content: space-between;
  align-items: center;  
  padding: 0 22rpx;
  margin-bottom: 20rpx;
  width: 100%;
  height: 142rpx;
  font-size: 30rpx;
  box-shadow: 0px 2rpx 15rpx 0px rgba(26, 108, 63, 0.07);
	border-radius: 16rpx;
}

.tips button {
  width: 130rpx;
  height: 40rpx;
  font-size: 26rpx;
  line-height: 40rpx;
  margin: 0;
  padding: 0;
  background-color: #8bb247;
  color: #fff;
}

.info {
  position: relative;
  width: 100%;
  height: 476rpx;
  background-color: #ffffff;
	box-shadow: 0px 2px 15px 0px rgba(26, 108, 63, 0.07);
	border-radius: 16px;
  padding: 42rpx 20rpx;
}

.shop image {
  position: absolute;
  top: 33rpx;
  right: 20rpx;
  width: 100rpx;
  height: 100rpx;
}
